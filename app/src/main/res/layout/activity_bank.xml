<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BankActivity">
    
    <TextView
        android:id = "@+id/usernameSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text = "Account user: testUsername"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id = "@+id/balanceSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text = "Account balance: 1000 GOLD"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id = "@+id/transfersDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text = "Recent transfers:"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <ListView
        android:id="@+id/transfersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>